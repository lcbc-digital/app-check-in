<% provide(:title, "Check-In") %>

<div class="row follow-alert">
  <div class="col-md-6 col-md-offset-3">
		<%= form_for(@check_in) do |f| %>
			
			<%= select(:check_in, :campus, [
				['BranchCreek','BRC'],
				['Berks','BRK'],
				['Columbia-Montour','CLM'],
				['Ephrata','EPH'], ['Harrisburg','HBG'],
				['Lancaster City','CTY'],
				['Manheim','MNH'],
				['York','YRK']],
				{prompt: 'Select Campus'},
				{ :class => "form-control"}
				) %>

			<%= f.submit "Check-In", :id => "submit-check-in", class: "btn btn-default" %>
		<% end %>

		<%= button_to "Edit Profile", edit_user_path(current_user),  :id => "edit-profile", form_class: "form-button",#user_url(@user), :id => "edit-profile", form_class: "form-button",
      :class => "btn btn-default", :method => :get %>

	</div>
</div>