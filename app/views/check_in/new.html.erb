<% provide(:title, "Check-In") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
		<%= form_for(@user) do |f| %>
			
			<%= select("Campus", "Campus_id", [['Manheim','Manheim'],
																				['Harrisburg','Harrisburg'],
																				['Ephrata','Ephrata'], 
																				['York','York'], 
																				['Lancaster City','Lancaster City'], 
																				['Branch Creek','Branch Creek'], 
																				['Columbia-Montour','Columbia-Montour']],
																				{prompt: 'Select Campus'},
																				{ :class => "form-control selectmenu" }
																				) %>

			<%= f.submit "Check-In", class: "btn btn-default" %>
		<% end %>

		<%= button_to "Edit Profile", user_url(@user), :id => "edit-profile", form_class: "form-button",
      :class => "btn btn-default", :method => :get %>

	</div>
</div>