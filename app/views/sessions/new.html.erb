<% provide(:title, "Log in") %>

<div class="row follow-alert">
  <div class="col-md-6 col-md-offset-3">
		<%= form_for(:session, url: login_path) do |f| %>
			<%= f.label :email %>
			<%= f.email_field :email, class: 'form-control' %>

			<%= f.label :password %>
			<%= f.password_field :password, class: 'form-control' %>

			<%= f.submit "Log-in", class: "btn btn-primary" %>
		<% end %>
		
		<%= button_to "Forgot Password?", signup_path, :id => "forgot_password_link",
      :class => "btn btn-default mtop", :method => :get %>
		
    <%= button_to "Create Profile", signup_path, :id => "create_profile_link", form_class: "form-button",
      :class => "btn btn-default", :method => :get %>
	</div>
</div>
