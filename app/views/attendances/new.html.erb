<% provide(:title, 'Attendance') %>

<h1>Mobile Check-In Attendance</h1>

<%= select(:check_in, :campus, [['1','1 Day'],
								['2','2 Days']],
								{prompt: 'Select Days'},
								{ :class => "form-control hide" }
								) %>


<div id="attendance-table" class="">
	<div class="table-header">
		<ul class="header">
			<li id="name">Name</li>
			<li id="email" class="email">Email</li>
			<li id="address" class="address">Address</li>
			<li id="dob" class="date_of_birth">DOB</li>
			<li id="campus" class="campus">Campus</li>
			<li id="time">Time of Check-In</li>
			<li id="date">Date of Check-In</li>
		</ul>
	</div>
	<div class="">
		<% @checkins.each do |checkin| %>
			<ul>
				<li><%= checkin.user.name %></li>
				<li class="email"><%= checkin.user.email %></li>
				<li class="address"><%= checkin.user.address %></li>
				<li class="date_of_birth"><%= checkin.user.date_of_birth.strftime("%m/%d/%Y")%></li>
				<li class="campus"><%= checkin.campus%></li>
				<li><%= checkin.updated_at.in_time_zone('Eastern Time (US & Canada)').strftime("%I:%M %p %Z")%></li>
				<li><%= checkin.updated_at.in_time_zone('Eastern Time (US & Canada)').strftime("%m/%d/%Y")%></li>
			</ul>
		<% end %>
	</div>
</div>